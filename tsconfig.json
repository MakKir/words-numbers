{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "lib": ["es2016", "dom"]
  },
  "include": ["src/**/*"]
}
